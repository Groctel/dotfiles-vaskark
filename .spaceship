# prompt
SPACESHIP_PROMPT_ORDER=(user host dir git char)
SPACESHIP_RPROMPT_ORDER=(exit_code time)
SPACESHIP_PROMPT_ADD_NEWLINE='true'
SPACESHIP_PROMPT_SEPARATE_LINE='true'
SPACESHIP_PROMPT_PREFIXES_SHOW='true'
SPACESHIP_PROMPT_SUFFIXES_SHOW='true'
SPACESHIP_PROMPT_DEFAULT_PREFIX='via'
SPACESHIP_PROMPT_DEFAULT_SUFFIX=' '

# char
SPACESHIP_CHAR_PREFIX=' '
SPACESHIP_CHAR_SUFFIX=' '
SPACESHIP_CHAR_SYMBOL='\uf490 '  # âžœ f490
SPACESHIP_CHAR_SYMBOL_ROOT=$SPACESHIP_CHAR_SYMBOL
SPACESHIP_CHAR_SYMBOL_SECONDARY=$SPACESHIP_CHAR_SYMBOL
SPACESHIP_CHAR_COLOR_SUCCESS='green'
SPACESHIP_CHAR_COLOR_FAILURE='red'
SPACESHIP_CHAR_COLOR_SECONDARY='yellow'

# user
SPACESHIP_USER_SHOW='true'
SPACESHIP_USER_COLOR='green'
SPACESHIP_USER_COLOR_ROOT='red'

# dir
SPACESHIP_DIR_SHOW='true'
SPACESHIP_DIR_PREFIX='in '
SPACESHIP_DIR_SUFFIX=$SPACESHIP_PROMPT_DEFAULT_SUFFIX
SPACESHIP_DIR_COLOR='cyan'

# host
SPACESHIP_HOST_SHOW='true'
SPACESHIP_HOST_COLOR_SSH='cyan'

# git
SPACESHIP_GIT_SHOW='true'

# battery
SPACESHIP_BATTERY_SHOW='always'
SPACESHIP_BATTERY_THRESHOLD='50'
SPACESHIP_BATTERY_SYMBOL_FULL='\uf58e '
SPACESHIP_BATTERY_SYMBOL_CHARGING='\uf583 '
SPACESHIP_BATTERY_SYMBOL_DISCHARGING='\uf58b '

# exit_code
SPACESHIP_EXIT_CODE_SHOW='true'
SPACESHIP_EXIT_CODE_PREFIX=' '
SPACESHIP_EXIT_CODE_SUFFIX=' '

# time
SPACESHIP_TIME_SHOW='true'
SPACESHIP_TIME_12HR='true'
SPACESHIP_TIME_COLOR='magenta'
SPACESHIP_TIME_PREFIX='at '
SPACESHIP_TIME_SUFFIX=$SPACESHIP_PROMPT_DEFAULT_SUFFIX
SPACESHIP_TIME_FORMAT='%D{%I:%M %P}'
