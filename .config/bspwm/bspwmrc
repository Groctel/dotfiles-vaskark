#!/bin/sh

# colours
. "$HOME"/.cache/wal/colors.sh

# picom
pgrep -x picom || picom --experimental-backends --config ~/.config/picom/picom.conf &

# redshift
pgrep -x redshift || systemctl --user restart redshift.service

# lock
pgrep -x xautolock || xautolock -time 10 -locker 'lock.sh' -killer 'systemctl suspend' -corners +0-0 -cornerdelay 1 &

# polkit
pgrep -x /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1 || /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1 &

# sxhkd
pgrep -x sxhkd || sxhkd -c "$HOME"/.config/bspwm/sxhkdrc "$HOME"/.config/sxhkd/sxhkdrc.common &

# wp
[ -f "$HOME"/.fehbg ] || bash "$HOME"/.fehbg &

# dunst
pgrep -x dunst || dunst &

# cursor
xsetroot -cursor_name left_ptr &

# monitors
bspc monitor eDP-1 -d 1 2 3 4 5
bspc monitor HDMI-2 -d 6 7 8 9 10

# desktop
bspc config automatic_scheme 	    alternate
bspc config pointer_modifier 		mod4
bspc config initial_polarity        second_child
bspc config split_ratio          	0.50

bspc config borderless_monocle   	true
bspc config gapless_monocle      	false
bspc config single_monocle		    true
bspc config focus_follows_pointer 	true
bspc config click_to_focus		    none
bspc config presel_feedback		    true

bspc config top_padding 		    0
bspc config bottom_padding 		    0
bspc config left_padding 		    0
bspc config right_padding 		    0
bspc config border_width 		    1
bspc config window_gap			    10

bspc config normal_border_color 	"$color8"
bspc config active_border_color 	"$color2"
bspc config focused_border_color 	"$color2"
bspc config presel_feedback_color	"$color2"

# reset all rules
bspc rule -r "*"

# rules
bspc rule -a St state=floating