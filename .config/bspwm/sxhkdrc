
# wm independent hotkeys
#

# terminal emulators
super + Return
	alacritty

super + shift + Return
        kitty

# program launcher
super + d
	rofi -no-lazy-grab -show drun

super + x
        dmenu.sh

# make sxhkd reload its configuration files:
#super + contror + r
#	pkill -USR1 -x sxhkd

# lockscreen
super + Escape
#	betterlockscreen -l pixel
	lock.sh

# file manager
super + F1
	nemo

# browser
super + F2
	google-chrome

# music
super + F3
	kitty -e ncmpcpp
	
# farge
super + F4
	farge.sh
	
# date
super + F5
	date.sh

# polybar
super + semicolon
	polybar-msg cmd toggle
super + shift + semicolon
	polybar-menu.sh

# music
alt + F10
	mpc prev
alt + F11
	mpc toggle
alt + F12
	mpc next
	
# picom
ctrl + F12
	picom-blur.sh
ctrl + shift + F12
	picom.sh
ctrl + alt + shift + F12
	picom-rounded.sh

# shots
super + PrintScreen
	screenshot.sh full
super + shift PrintScreen
	screenshot.sh window

# reboot
super + shift + Delete
	systemctl reboot

# shutdown
super + control + Delete
	systemctl poweroff -i 

# volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# brightness
XF86MonBrightnessUp
	light -A 5
XF86MonBrightnessDown
	light -U 5

# wal
super + F12
	wal -f random_user -o wal-berry.sh -o wal-cava.sh -o wal-dunst.sh -o wal-glava.sh
super + shift + F12
	wal -R -o wal-berry.sh -o wal-cava.sh -o wal-dunst.sh -o wal-glava.sh
    
# xmenu
super + z
	xmenu.sh


#
# bspwm hotkeys
#


# Quit 
super + Delete
	bspc quit
	
# Restart
super + shift + r
	bspc wm -r
	
# Kill
super + q
	bspc node -c

# Focus on window direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}
	
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}
	
# Send window to desktop
super + shift + {0-9}
	bspc node -d {0-9} && bspunhide
	
# Send window to desktop and follow
super + control + {0-9}
	bspc node -d {0-9} bspunhide && bspc desktop -f {0-9}
	
# Fullscreen
super + f
	bspfullscreen

# Floating
super + t
	bspc node -s focused.tiled -t floating || bspc node focused.floating -t tiled
	
# Swap windows
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

super + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

