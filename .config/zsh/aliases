# general
alias zr='history -c && clear && exec zsh'
alias zs='exec zsh'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias md='mkdir -pv'
alias rd='rmdir -pv'
alias df='df -H'
alias du='du -d 1 -h -c'
alias cd..='cd ..'
alias d='dirs -v | head -10'
alias free='free -m'

# lsd
alias lsd='lsd --group-dirs first'
alias ls='lsd'
alias l='lsd -l'
alias ll='lsd -al'
alias lt='lsd --tree --depth 2'

# exa
alias exa='exa --icons --git -g --group-directories-first'
alias lx1='exa -1'
alias lx='exa -l'
alias lxl='exa -la'
