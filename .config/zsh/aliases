# general
alias rm='rm -i'
alias cp='cp -i'
alias md='mkdir -pv'
alias rd='rmdir -pv'
alias df='df -HT'
alias du='du -d 1 -h -c'
alias cd..='cd ..'
alias free='free -m'
alias v=$EDITOR
alias tc="tty-clock -cst -C 2 -f '%A %B %d %Y'"
alias mount='mount | column -t'
alias u='unimatrix -c green -a -f -n -s 98'
alias h='htop -u $USER'
alias t='top -u $USER'
alias pf='clear;pfetch'
alias n='nnn'
alias c='cava'
alias p='pipes-rs'
alias mi='mediainfo'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias ping='ping -c 5'
alias path='print -l $path'
alias fr='feh --randomize --bg-fill --recursive --no-fehbg ~/Pictures/*.(png|jpg)'
alias rmpd='systemctl --user daemon-reload; systemctl --user restart mpd'
alias lf="$HOME/.local/bin/lf.sh"
alias ed='ed -p ": "'
alias nd='ncdu -L -q --color dark --exclude-caches'

# lsd
alias lsd='lsd -h --group-dirs first --no-symlink'
