[global]
monitor = 0
follow = mouse
geometry = "0x0-25+25"
indicate_hidden = no
shrink = yes
transparency = 0
separator_height = 2
padding = 10 
horizontal_padding = 10
frame_width = 0
frame_color = "#97B19C"
separator_color = frame
sort = yes
idle_threshold = 10

font = scientifica 8
line_height = 20
markup = yes
format = "%s %b"
alignment = center
show_age_threshold = 1000
word_wrap = yes
ellipsize = end
ignore_newline = yes
show_indicators = yes

sticky_history = yes
history_length = 2

startup_notification = false
corner_radius = 0

[shortcuts]
close = ctrl+space
close_all = ctrl+shift+space
history = ctrl+grave
context = ctrl+shift+period

[urgency_low]
background = "#97B19C"
foreground = "#28282C"
timeout = 20

[urgency_normal]
background = "#97B19C"
foreground = "#28282C"
timeout = 20

[urgency_critical]
background = "#97B19C"
foreground = "#28282C"
timeout = 30

# vim: ft=cfg
