[bar/main]
;monitor = ${env:MONITOR:eDP-1}
width = 80%
height = 30
offset-x = 10%
offset-y = 10
bottom = true
fixed-center = true
enable-ipc = true
cursor-click = pointer

background = ${colors.color0}
foreground = #555

border-size = 4
border-color = ${colors.color0}

padding-left = 0
padding-right = 0

module-margin = 0

font-0 = "scientifica:bold:size=8;2"
font-1 = "Apple Color Emoji:scale=14;2:antialias=false"
# font-1 = "Noto Color Emoji:scale=12;2:antialias=false"
# font-1 = "JoyPixels:scale=12;2:antialias=false"

modules-left = misc sp ewmh
modules-center = pulseaudio
modules-right = wlan eth uptime temp cpu memory battery volume sp date

