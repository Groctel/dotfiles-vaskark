[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600

label-song = %{A1:mpc -q toggle:}%{A2:mpc -q prev:}%{A3:mpc -q next:}%artist% >> %title%%{A}%{A}%{A}
format-online-prefix = "🎵 "
format-online = <label-song>

label-offline = mpd offline :(
format-offline = <label-offline>

label-song-maxlen = 200
label-song-ellipsis = true

##################################################

[module/pulseaudio]
type = internal/pulseaudio
interval = 1
click-right = pkill pavucontrol || pavucontrol

format-volume = <bar-volume><label-volume>
label-volume = %percentage%%

label-muted = 🔇

bar-volume-width = 10
bar-volume-foreground = ${colors.color2}
bar-volume-indicator = █
bar-volume-fill = █
bar-volume-fill-foreground = ${self.bar-volume-foreground}
bar-volume-empty = █

##################################################

[network]
type = internal/network
interval = 1
accumulate-stats = true
unknown-as-up = true

format-connected-prefix = "💨 "
format-connected = <label-connected>
format-connected-padding = 1

##################################################

[module/wlan]
inherit = network
interface-type = wireless

label-connected = %essid% [%downspeed%]

##################################################

[module/eth]
inherit = network
interface-type = wired

label-connected = %ifname% [%downspeed%]

##################################################

[module/uptime]
type = custom/script
exec = ~/.config/scripts/uptime.sh
interval = 1

label = %output%
format-prefix = "⏳ "
format = <label>
format-padding = 1

##################################################

[module/temp]
type = internal/temperature
thermal-zone = 0
base-temperature = 20
warn-temperature = 75

label = %temperature-c%
format-prefix = "🌡 "
format = <label>
format-padding = 1

label-warn = %temperature-c%
format-warn-prefix = "🌡 "
format-warn = <label-warn>
format-warn-padding = 1

##################################################

[module/cpu]
type = internal/cpu
interval = 0.5

label = %percentage%%
format-prefix = "🤖 "
format = <label>
format-padding = 1

##################################################

[module/memory]
type = internal/memory
interval = 1

label = %percentage_used%%
format-prefix = "🍜 "
format = <label>
format-padding = 1

##################################################

[module/battery]
type = internal/battery
full-at = 98
battery = BAT0
adapter = AC0
poll-interval = 5

label-charging = %percentage%%
format-charging-prefix = "🔌 "
format-charging = <label-charging>
format-charging-padding = 1

label-discharging = %percentage%%
format-discharging-prefix = "🔋 "
format-discharging = <label-discharging>
format-discharging-padding = 1

label-full = %percentage%%
format-full-prefix = "🔋 "
format-full = <label-full>
format-full-padding = 1

##################################################

[module/volume]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
interval = 5
click-right = pkill pavucontrol || pavucontrol

label-volume = %percentage%%
format-volume = <ramp-volume> <label-volume>
format-volume-padding = 1

label-muted = ---
format-muted-prefix = "🔇 "
format-muted = <label-muted>
format-muted-padding = 1

ramp-volume-0 = 🔈
ramp-volume-1 = 🔉
ramp-volume-2 = 🔊

##################################################

[module/date]
type = internal/date
interval = 1

time = ⌚ %I:%M %p
time-alt = 📆 %a %b %d %Y ⌚ %I:%M %p

label = %time%
format = <label>

format-background = ${colors.color2}
format-foreground = ${colors.color0}
format-padding = 2

