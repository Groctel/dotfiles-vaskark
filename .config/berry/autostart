#!/bin/bash

# Apps
sxhkd -c $HOME/.config/berry/sxhkdrc &
nitrogen --restore &
redshift-gtk.sh &
nm-applet &
xautolock.sh &
compton.sh &
dunst &
~/.config/polybar/launch-ewmh.sh &

# Set decoration geometry
berryc border_width       1
berryc inner_border_width 1
berryc title_height       30
berryc top_gap            30

# Set decoration colors
berryc focus_color         292D3E
berryc unfocus_color       292D3E
berryc inner_focus_color   565679
berryc inner_unfocus_color 565679
berryc text_focus_color    000000
berryc test_unfocus_color  999999

# Other options
berryc smart_place "true"
berryc draw_text   "true"
berryc edge_lock   "true"
berryc set_font    "Monospace-7"
