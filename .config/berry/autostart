#!/bin/sh

# Set startup apps
~/.config/wpg/wp_init.sh &
sxhkd -c $HOME/.config/berry/sxhkdrc &
polybar-main-small-bottom.sh &
#nitrogen --restore &
redshift.sh &
xautolock.sh &
picom-xr.sh &
dunst &
libinput-gestures &
wal-berry.sh &
wal-dunst.sh &
wal-glava.sh &
#wal -R -o wal-berry.sh -o wal-dunst.sh -o wal-glava.sh &
/usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1 &

# Set decoration geometry
berryc border_width         0
berryc inner_border_width   0
berryc title_height         24
#berryc top_gap		    30	
berryc edge_gap             0 0 0 0
berryc decorate_new	    false

# Set decoration colors
berryc focus_color          
berryc unfocus_color        
berryc inner_focus_color    565679
berryc inner_unfocus_color  3D3D56
berryc text_focus_color     000000
berryc text_unfocus_color   111111

# Other options
berryc smart_place "true"
berryc draw_text   "false"
berryc edge_lock   "true"
berryc set_font    "scientifica-8:bold"
