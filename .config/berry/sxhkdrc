#
# wm independent hotkeys
#

# terminals
super + {_,shift +} Return
	{alacritty,kitty}

# program launchers
super + {_,shift +} d
	{rofi -show drun,dmenu.sh}

# reload sxhkd
super + control + r
	pkill -USR1 -x sxhkd

# lockscreen
super + Escape
	lock.sh

# file managers
super + {_,shift +} F1
	{nemo,pcmanfm}

# browsers
super + {_,shift +} F2
	{google-chrome,firefox}

# music
super + F3
	alacritty -e ncmpcpp
	
# wp
super + F4
	feh --randomize --bg-fill --recursive --no-fehbg ~/Pictures/*.(png|jpg)
	
# date
super + F5
	date.sh

# polybar
super + {_,shift +} semicolon
	polybar-msg cmd {toggle,restart}

# music
alt + {F10,F11,F12}
	mpc -q {prev,toggle,next}

# shots
super + {_,shift +} PrintScreen
	screenshot.sh {full,window}

# volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# brightness
XF86MonBrightnessUp
	light -A 5
XF86MonBrightnessDown
	light -U 5

# wal
super + F12
	wal -f random_user -o wal-berry.sh -o wal-dunst.sh
super + shift + F12
	wal -R -o wal-berry.sh -o wal-dunst.sh
    
# xmenu
super + z
	xmenu.sh

# reboot, shutdown
super + {shift +,control +} Delete
	systemctl {reboot, poweroff -i}


#
# berry hotkeys
#


super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + control +  {h, j, k, l}
    berryc window_move {-10 0, 0 10, 0 -10, 10 0}

super + {Left, Down, Up, Right}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + control {Left, Down, Up, Right}
    berryc window_move {-10 0, 0 10, 0 -10, 10 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}
    
super + control + shift +  {h, j, k, l}
    berryc window_resize {-10 0, 0 10, 0 -10, 10 0}

super + shift +  {Left, Down, Up, Right}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}
    
super + control + shift +  {Left, Down, Up, Right}
    berryc window_resize {-10 0, 0 10, 0 -10, 10 0}

super + {1-5}
    berryc switch_workspace {0-5}

super + shift + {1-5}
    berryc send_to_workspace {0-5}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + r
    berryc window_raise

super + c
    berryc window_center

super + Delete
     berryc quit

~button1
     berryc pointer_focus
