#
# wm independent hotkeys
#

# terminal emulators
super + Return
	termite

super + shift + Return
        kitty

# program launcher
super + d
	rofi -no-lazy-grab -show drun

super + x
        dmenu.sh

# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd

# lockscreen
super + Escape
	betterlockscreen -l pixel

# nautilus
super + F1
	nemo

# chrome
super + F2
	google-chrome

# music
super + F3
	kitty -e ncmpcpp

# polybar
super + semicolon
	polybar-msg cmd toggle
super + shift + semicolon
	polybar-menu.sh

# music controls
alt + {F10,F11,F12}
	mpc {prev,toggle,next}

# picom
ctrl + F12
	picom-blur.sh
ctrl + shift + F12
	picom.sh

# shot
super + PrintScreen
	screenshot.sh full
super + shift PrintScreen
	screenshot.sh window

# reboot
super + shift + Delete
	systemctl reboot

# shutdown
super + control + Delete
	systemctl poweroff -i 

# volume
XF86AudioRaiseVolume
	pactl set-sink-volume @DEFAULT_SINK@ +5%
XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -5%
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# brightness
XF86MonBrightnessUp
	light -A 5
XF86MonBrightnessDown
	light -U 5

# wal
super + F12
    wal -f random_user -o wal-berry.sh -o wal-dunst.sh
super + shift + F12
    sxiv ~/Pictures/favs/ -t -g 630x600+60+60 
super + control + F12
    wal -f random -o wal-berry.sh -o wal-dunst.sh
super + control + shift + F12
    wal -R


#
# berry hotkeys
#


super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + control +  {h, j, k, l}
    berryc window_move {-10 0, 0 10, 0 -10, 10 0}

super + {Left, Down, Up, Right}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + control {Left, Down, Up, Right}
    berryc window_move {-10 0, 0 10, 0 -10, 10 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {Left, Down, Up, Right}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {1-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

#super +  p
#    berryc snap_right

#super + o 
#    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + r
    berryc window_raise

super + c
    berryc window_center

super + Delete
     berryc quit

~button1
     berryc pointer_focus
