# general
alias \
	rm='rm -i' \
	cp='cp -i' \
	md='mkdir -pv' \
	rd='rmdir -pv' \
	df='df -HT' \
	du='du -d 1 -h -c' \
	cd..='cd ..' \
	free='free -m' \
	v=$EDITOR \
	tc="tty-clock -cst -C 2 -f '%A %B %d %Y'" \
	mount='mount | column -t' \
	u='unimatrix -c green -a -f -n -s 98' \
	h='htop -u $USER' \
	t='top -u $USER' \
	pf='clear;pfetch' \
	n='nnn' \
	c='cava' \
	p='pipes-rs' \
	mi='mediainfo' \
	grep='grep --color=auto' \
	egrep='egrep --color=auto' \
	ping='ping -c 5' \
	path='print -l $path' \
	fr='feh --randomize --bg-fill --recursive --no-fehbg ~/Pictures/*.(png|jpg)' \
	rmpd='systemctl --user daemon-reload; systemctl --user restart mpd' \
	lf="$HOME/.local/bin/lf.sh" \
	ed='ed -p ": "' \
	ncdu='ncdu -L -q --color dark --exclude-caches' \
	icat='kitty +kitten icat' \
        mg='kitty +kitten hyperlinked_grep --smart-case "$@"'

# lsd
alias \
	lsd='lsd -h --group-dirs first --no-symlink' \
	ls='lsd' \
	l='ls -l' \
	ll='ls -al' \
	lt='ls --tree --depth 2' \

