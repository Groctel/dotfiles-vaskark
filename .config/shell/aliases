# exa
alias exa='exa --icons --git -g --time-style long-iso --group-directories-first -@ -H'
alias ls='exa'
alias l='ls -l'
alias ll='ls -al'
alias lt='ls -T -L 2'

# zsh
alias zc="$EDITOR $ZDOTDIR/.zshrc"
alias za="$EDITOR $XDG_CONFIG_HOME/shell/aliases"
alias zp="$EDITOR $XDG_CONFIG_HOME/shell/profile"
alias zh="rm -f $ZDOTDIR/zhistory && clear && exec zsh" 
alias zs="clear && exec zsh"

# xrdb
alias xc="$EDITOR $XDG_CONFIG_HOME/x11/xresources"
alias xu="xrdb $XDG_CONFIG_HOME/x11/xresources"

# xinitrc
alias xx="$EDITOR $XINITRC"

# journal
alias jctl='journalctl'
alias jcb='jctl -p 3 -b'
alias jce='jctl -p 3 -e'

# git
alias gc='git commit -a'
alias ga='git add'
alias gp='git pull'
alias gl='git log'
alias gls='git log --stat'
alias gs='git status'
alias gc1='git clone --depth=1'

# neofetch
alias nf0='clear;neofetch --config none'
alias nf='clear;neofetch'
alias nfo='clear;neofetch --off'

# fonts
alias f2s='fonttosfnt -v -r -b -c -g 2 -m 2 -o'
alias fcc='fc-cache'
alias fcl='fc-list'

# wal
alias w1='wal -f random_user -o wal-extras.sh'
alias w2='wal -f random -o wal-extras.sh'
alias fw='fzf-wal.sh'

# system
alias upd8='sudo apt update;sudo apt full-upgrade;sudo apt autoremove;sudo apt clean'
alias nu='sudo nala upgrade -y'
alias shut='poweroff'

# startx
[ -f "$XINITRC" ] && alias startx="startx $XINITRC"

# kernel
alias mkc="make LSMOD=$XDG_CONFIG_HOME/modprobed.db localmodconfig"
alias mkp='make deb-pkg -j4 LOCALVERSION=-custom'

# networking
alias rnm='sudo systemctl restart NetworkManager'
alias up='nmcli c u'
alias dn='nmcli c d'
alias ndw='nmcli d wifi'
alias i='ip -br -c a'

# install
alias s1='sudo make install'
alias s2='sudo make PREFIX=/usr/local install'
alias s3='sudo ninja -C build install'

# systemd
alias sc='systemctl'
alias scu='systemctl --user'

