# general
alias rm='rm -i'
alias cp='cp -i'
alias ln='ln -i'
alias md='mkdir -pv'
alias rd='rmdir -pv'
alias df='df -hT'
alias du='du -d 1 -h -c'
alias cd..='cd ..'
alias tc="tty-clock -cst -C 2 -f '%A %B %d %Y'"
alias mount='mount | column -t'
alias u='unimatrix -c green -a -f -n -s 98'
alias h='htop -u $USER'
alias t='top -U $USER'
alias pf='clear;pfetch'
alias n='nnn'
alias c='cava'
alias p='pipes-rs'
alias mi='mediainfo'
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias ping='ping -c 5'
alias path='print -l $path'
alias rmpd='systemctl --user daemon-reload; systemctl --user restart mpd'
alias lf="$HOME/.local/bin/lf.sh"
alias ed='ed -p ": "'
alias ncdu='ncdu -L -q --color dark --exclude-caches'
alias m='micro'
alias v="$EDITOR"
alias nvc="$EDITOR $XDG_CONFIG_HOME/nvim/init.vim"
alias rhb='run-help bindkey'
alias lml='exa -l -r -s time /var/log | tail'
alias clean_logs='sudo rm -rf /var/log/*'
alias btc='bluetoothctl'
alias -g G='| grep -i'

