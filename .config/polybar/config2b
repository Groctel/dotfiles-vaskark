module-margin-right = 0

font-0 = "scientifica:style=bold:size=11;2"
font-1 = "Siji:size=8;2"

modules-left = workspaces
modules-center = 
modules-right = mpd wireless wired volume

;dim-value = 0.8

;tray-position = right
;tray-padding = 2
;tray-detached = false
;tray-background = ${colors.color0}
;tray-maxsize = 12

;override-redirect = true
;wm-restack = i3

scroll-up = i3wm-wsnext
