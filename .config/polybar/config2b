## Polybar config - compact

[colors]
color0 = ${xrdb:color0}
color6 = ${xrdb:color6}
color3 = ${xrdb:color3}
alert = #bd2c40

[bar/main]
;monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 30
radius = 2
fixed-center = true

background = transparent
foreground = 

line-size = 
line-color = 

border-size = 5
border-color = transparent

padding-left = 0
padding-right = 0

