include /etc/sway/config.d/*

# startup apps
exec --no-startup-id libinput-gestures
exec --no-startup-id nm-applet
exec --no-startup-id glava-mpd.sh
exec --no-startup-id mpd
exec --no-startup-id ~/bin/waybar.sh

# app bindings
bindsym $mod+F1 exec nautilus
bindsym $mod+F2 exec google-chrome-stable
bindsym $mod+F3 exec kitty --class Float -e ncmpcpp
bindsym $mod+F4 exec farge.sh
bindsym $mod+Shift+e exec gedit ~/.config/sway/config

# pulseaudio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle

# screen brightness controls
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

