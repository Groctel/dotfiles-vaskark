# wal
wal -R -o wal-extras.sh &

# picom
picom --experimental-backends --config ~/.config/picom/picom.conf &

# polkit
/usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1 &
#/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# lock
xautolock -time 10 -locker 'lock.sh' -killer 'systemctl suspend' -corners 00-+ &

# redshift
systemctl --user import-environment; systemctl --user start graphical-session.target
systemctl --user restart redshift.service

# lemonbar
lemonbar-start.sh &
