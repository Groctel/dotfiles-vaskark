## log out, reboot, shutdown ...
bindsym $mod+Shift+Delete mode "$system"
set $system System ... logout (l), reboot (r), shutdown (s)
mode "$system" {
    # logout
    bindsym l exec --no-startup-id i3-msg exit, mode "default"
    # reboot
    bindsym r exec reboot, mode "default"
    # suspend
    # bindsym z exec betterlockscreen -s pixel
    # shutdown
    bindsym s exec poweroff, mode "default"
    # back to normal
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

