# general
fontname "scientifica:pixelsize=11:bold:antialias=true"
gap 8 8 8 8
borderwidth 1

# colors
color activeborder '{color2}'
color inactiveborder '{color8}'
color urgencyborder '{color1}'
color groupborder '{color6}'
color ungroupborder '{color13}'

# ignore
ignore dmenu
ignore Bar
ignore Polybar

# unbind
unbind-key CM-Return
unbind-key CM-x
unbind-key CMS-r
unbind-key CMS-q

# bind
bind-key 4-Return alacritty
bind-key 4-w window-close
bind-key 4-d rofi.sh
bind-key 4S-r restart
bind-key 4-Delete quit

bind-key M-F10 mpc prev
bind-key M-F11 mpc toggle
bind-key M-F12 mpc next

bind-key XF86AudioRaiseVolume pactl set-sink-volume @DEFAULT_SINK@ +5%
bind-key XF86AudioLowerVolume pactl set-sink-volume @DEFAULT_SINK@ -5%
bind-key XF86AudioMute pactl set-sink-mute @DEFAULT_SINK@ toggle
