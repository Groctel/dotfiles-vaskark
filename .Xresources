!! Window
URxvt*termName: rxvt-unicode-256
URxvt*scrollBar: false
URxvt*geometry: 100x26
URxvt*internalBorder: 20
!URxvt*fading: 25

!! Modifier (alt, meta, hyper, super, mod1, mod2, mod3, mod4, mod5)
URxvt.modifier: alt

!! Print
!URxvt*print-pipe: cat > $(TMPDIR=$HOME mktemp urxvt.XXXXXX)
URxvt*print-pipe: cat > $HOME/$(echo urxvt.dump.$(date +'%Y%M%d%H%m%S'))

!! Cursor
URxvt*cursorBlink: false
URxvt*cursorUnderline: true

!! Pointer
URxvt.pointerBlank: true

!! Real transparency
!URxvt*depth: 32

!! Xft settings
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull
Xft.autohint:   true
Xft.lcdfilter:  lcdfilter

!! Fonts
URxvt*font: xft:Monospace:size=8
URxvt*boldFont: xft:Monospace:bold:size=8
URxvt*italicFont: xft:Monospace:italic:size=8
URxvt*boldItalicFont: xft:Monospace:bolditalic:size=8

!! Change font
URxvt.keysym.M-C-1: command:\033]710;xft:agave Nerd Font Mono:size=9\007\033]711;xft:agave Nerd Font Mono:bold:size=9\007\033]712;xft:agave Nerd Font Mono:italic:size=9\007\033]713;xft:agave Nerd Font Mono:bolditalic:size=9\007
URxvt.keysym.M-C-2: command:\033]710;xft:TerminessTTF Nerd Font Mono:size=10\007\033]711;xft:TerminessTTF Nerd Font Mono:bold:size=10\007\033]712;xft:TerminessTTF Nerd Font Mono:italic:size=10\007\033]713;xft:TerminessTTF Nerd Font Mono:bolditalic:size=10\007

!! Spacing
URxvt*letterSpace: -1

!! Larger history limit
URxvt.saveLines: 2000

!! Perl extensions
URxvt.perl-ext-common: default,matcher,fullscreen,selection-to-clipboard,resize-font,bell-command,tabbedex,keyboard-select

!! Matcher (clickable urls)
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.keysym.M-Delete: perl:matcher:list
URxvt.matcher.rend.0: Uline Bold fg5

!! Fullscreen (requires wmctrl package)
URxvt.keysym.F11: perl:fullscreen:switch

!! Resize fonts
URxvt.resize-font.smaller: M-minus
URxvt.resize-font.bigger:  M-plus
URxvt.resize-font.reset:   M-0
URxvt.resize-font.show:    M-slash

!! Bell command
URxvt.bell-command: canberra-gtk-play -i bell

!! Tabbedex
URxvt.tabbed.no-tabbedex-keys: true
URxvt.keysym.M-t: perl:tabbedex:new_tab
URxvt.keysym.M-Right: perl:tabbedex:next_tab
URxvt.keysym.M-Left: perl:tabbedex:prev_tab
URxvt.keysym.M-Shift-Left: perl:tabbedex:move_tab_left
URxvt.keysym.M-Shift-Right: perl:tabbedex:move_tab_right
URxvt.keysym.M-r: perl:tabbedex:rename_tab

URxvt.tabbed.reopen-on-close: yes
URxvt.tabbed.title: yes
URxvt.tabbed.new-button: no
URxvt.tabbed.autohide: true

URxvt.tabbed.tabbar-fg: 3
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 0
URxvt.tabbed.tab-bg: 3
URxvt.tabbed.title-fg: 3
URxvt.tabbed.title-bg: 0

!! Keyboard select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true

!! Copy/paste remapped
! make sure to turn off default copy/paste keybindings:
URxvt.keysym.C-M-c: builtin-string:
URxvt.keysym.C-M-v: builtin-string:
!
URxvt.keysym.M-c: eval:selection_to_clipboard
URxvt.keysym.M-v: eval:paste_clipboard

!! Allow Control-Shift (for unicode)
URxvt.iso14755: true
URxvt.iso14755_52: true

!! See if this speeds things up
URxvt*skipBuiltinGlyphs: true

!! Opacity
!*alpha: 0.90

!! Colours
!#include ".xthemes/Dkeg-Skigh.Xresources"
! wal
#include ".cache/wal/colors.Xresources"
