! Xft
Xft.dpi: 96
Xft.antialias: 1
Xft.hinting: 1
Xft.rgba: rgb
Xft.autohint: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault

! URxvt
URxvt*termName: rxvt-unicode-256color
URxvt*font: -*-scientifica-medium-r-*
URxvt*boldFont: -*-scientifica-bold-r-*
URxvt*letterSpace: -6
URxvt*geometry: 80x22
URxvt*internalBorder: 20
URxvt*saveLines: 2000
URxvt*scrollBar: false
URxvt*visualBell: false
URxvt*depth: 32
URxvt*iso14755: false
URxvt*iso14755_52: false
URxvt*pointerBlank: true

! URxvt Navigation Keys
URxvt.keysym.M-Up: command:\033]720;1\007
URxvt.keysym.M-k: command:\033]720;1\007
URxvt.keysym.M-Down: command:\033]721;1\007
URxvt.keysym.M-j: command:\033]721;1\007

! URxvt Extensions
URxvt.perl-ext-common: default,url-select,selection-to-clipboard,keyboard-select,resize-font,bell-command
! url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.underline: true
! URxvt.url-select.autocopy: true
! selection-to-clipboard
URxvt.keysym.C-S-C: eval:selection_to_clipboard
URxvt.keysym.C-S-V: eval:paste_clipboard
! keyboard-select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true
! resize-font
URxvt.resize-font.smaller: C-minus
URxvt.resize-font.bigger: C-equal
URxvt.resize-font.reset: C-0
URxvt.resize-font.show: C-slash
! bell-command
URxvt.bell-command: canberra-gtk-play -i bell

! XTerm
XTerm*termName: xterm-256color
XTerm*faceName: scientifica:pixelsize=11
XTerm*allowBoldFonts: true
XTerm*renderFont: true
XTerm*geometry: 80x22
XTerm*internalBorder: 20
XTerm*scrollBar: false
XTerm*on2Clicks: word
XTerm*on3Clicks: line
XTerm*saveLines: 2000
XTerm*visualBell: true
XTerm*selectToClipboard: true

! XTerm Keybindings
XTerm.vt100.translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>R: hard-reset() \n\
    Ctrl <Key> -: smaller-vt-font() \n\
    Ctrl <Key> +: larger-vt-font() \n\
    Ctrl <Key> 0: set-vt-font(d)

! Colours
#include ".cache/wal/colors.Xresources"
