!! Window
URxvt*termName: rxvt-unicode-256
URxvt*scrollBar: false
URxvt*geometry: 100x26
URxvt*internalBorder: 20
!URxvt*fading: 25

!! Modifier (alt, meta, hyper, super, mod1, mod2, mod3, mod4, mod5)
Urxvt.modifier: alt

!! Print
URxvt*print-pipe: cat > $(TMPDIR=$HOME mktemp urxvt.XXXXXX)

!! Cursor
URxvt*cursorBlink: true
URxvt*cursorUnderline: true

!! Pointer
URxvt.pointerBlank: true

!! Real transparency
URxvt*depth: 32

!! Xft settings
Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintfull
Xft.autohint:   true
Xft.lcdfilter:  lcdfilter

!! Fonts
URxvt*font: xft:Monospace:size=8    
URxvt*boldFont: xft:Monospace:bold:size=8
URxvt*italicFont: xft:Monospace:italic:size=8
URxvt*boldItalicFont: xft:Monospace:bolditalic:size=8

!! Change font
URxvt.keysym.M-C-0: command:\033]710;xft:Monospace:size=8\007\033]711;xft:Monospace:bold:size=8\007\033]712;xft:Monospace:italic:size=8\007\033]713;xft:Monospace:bolditalic:size=8\007
URxvt.keysym.M-C-1: command:\033]710;xft:JetBrainsMono Nerd Font Mono:size=8\007\033]711;xft:JetBrainsMono Nerd Font Mono:bold:size=8\007\033]712;xft:JetBrainsMono Nerd Font Mono:italic:size=8\007\033]713;xft:JetBrainsMono Nerd Font Mono:bolditalic:size=8\007

!! Spacing
URxvt*letterSpace: -1

!! Larger history limit
URxvt.saveLines: 2000

!! Perl extensions
URxvt.perl-ext-common: default,matcher,resize-font,selection-to-clipboard,fullscreen,bell-command,tabbedex,keyboard-select

!! Clickable URLs
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

!! Fullscreen (requires wmctrl package)
URxvt.keysym.F11: perl:fullscreen:switch

!! Resize fonts
URxvt.resize-font.smaller: M-minus
URxvt.resize-font.bigger:  M-plus
URxvt.resize-font.reset:   M-0
URxvt.resize-font.show:    M-slash

!! Tabbedex
URxvt.keysym.Control-t: perl:tabbedex:new_tab
URxvt.tabbed.reopen-on-close: yes
URxvt.tabbed.title: yes
URxvt.tabbed.new-button: no
URxvt.tabbed.autohide:  yes

URxvt.tabbed.tabbar-fg: 6
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 0
URxvt.tabbed.tab-bg: 6
URxvt.tabbed.title-fg: 6
URxvt.tabbed.title-bg: 0

!! Keyboard select
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keyboard-select.clipboard: true

!! Copy/paste remapped
! make sure to turn off default copy/paste keybindings:
URxvt.keysym.C-M-c: builtin-string:
URxvt.keysym.C-M-v: builtin-string:
!
URxvt.keysym.M-c: eval:selection_to_clipboard
URxvt.keysym.M-v: eval:paste_clipboard

!! Allow Control-Shift
URxvt.iso14755: true
URxvt.iso14755_52: true

!! Opacity
*.alpha: 0.95

!! Colours
#include ".cache/wal/colors.Xresources"
